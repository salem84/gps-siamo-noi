		//-	div.loadingContent
		//-		p
		//-			img(alt='Loading', src='images/ajax-loader.gif', width='100px')

		nav.navbar.navbar-inverse.navbar-fixed-bottom(role='navigation', data-ng-controller='NavCtrl')
			div.container
				div.navbar-header
					button.navbar-toggle(type='button' data-toggle='collapse' data-target='#bs-main-nav')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/')= title
					a.navbar-brand(href='{{linkUrl()}}')= '{{linkText()}}'
				div.collapse.navbar-collapse#bs-main-nav
					ul.nav.navbar-nav.navbar-right
						li
							a(href='/segnalazioni/nuovo')='Segnala'
						li
							a(href='/twitter/profili')='Twitter'
